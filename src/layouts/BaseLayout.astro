---
const { title = "Ricky Frank – Portafolio", description = "" } = Astro.props;

const links = [
  { href: "/", label: "Inicio" },
  { href: "/sobremi", label: "Sobre mí" },
  { href: "/habilidades", label: "Habilidades" },
  {href:"/experiencia",label:"Experiencia"},
  { href: "/proyectos", label: "Proyectos" },
  { href: "/contacto", label: "Contacto" },
];

import "../styles/global.css";
---
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
  </head>

  <body class="min-h-screen font-[Montserrat,ui-sans-serif] bg-white text-slate-900 dark:bg-slate-950 dark:text-slate-100">

    <!-- Partículas a pantalla completa (en TODAS las páginas) -->
    <div id="particles-bg" class="fixed inset-0 z-20 pointer-events-none"></div>

    <!-- NAV -->
    <header class="sticky top-0 shadow-md z-50">
      <nav class="mx-auto max-w-6xl px-4">
        <div class="flex h-14 items-center justify-between">
          <!-- Brand -->
          <a href="/" class="font-bold tracking-tigh dark:text-white">Ricky Frank</a>

          <!-- Toggler (mobile) -->
          <button
            id="nav-toggle"
            class="md:hidden inline-flex items-center justify-center rounded-lg p-2 hover:bg-black/5 dark:hover:bg-white/10"
            aria-controls="nav-menu" aria-expanded="false">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>

          <!-- Links (desktop) -->
          <ul id="nav-menu" class="hidden md:flex gap-3 items-center">
            {links.map((link) => {
              const isActive = Astro.url.pathname === link.href;
              return (
                <li>
                  <a
                    href={link.href}
                    class={`px-3 py-2 rounded-md text-sm hover:bg-black/5 dark:hover:bg-white/10 ${isActive ? "nav-active font-semibold" : ""}`}
                  >
                    {link.label}
                  </a>
                </li>
              );
            })}
          </ul>
        </div>

        <!-- Links (mobile drawer) -->
        <ul id="nav-drawer" class="md:hidden hidden flex-col gap-1 pb-3">
          {links.map((link) => {
            const isActive = Astro.url.pathname === link.href;
            return (
              <li>
                <a
                  href={link.href}
                  class={`block px-3 py-2 rounded-md hover:bg-black/5 dark:hover:bg-white/10 ${isActive ? "nav-active font-semibold" : ""}`}
                >
                  {link.label}
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
    </header>

    <!-- CONTENIDO -->
    <main class="relative z-30">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="relative z-30 site-footer mt-10">
      <div class="mx-auto max-w-6xl px-4 py-6 text-center text-sm text-slate-600 dark:text-slate-300">
        &copy; 2025 Ricky Frank. Todos los derechos reservados.
      </div>
    </footer>

    <!-- Scripts globales -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <script src="/scripts/particles.js" is:inline></script>
    <script src="/scripts/splash.js" is:inline></script>

    <!-- Script simple para el menú móvil -->
    <script is:inline>
      const btn = document.getElementById('nav-toggle');
      const menu = document.getElementById('nav-menu');
      const drawer = document.getElementById('nav-drawer');
      if (btn && menu && drawer) {
          btn.addEventListener('click', () => {
            drawer.classList.toggle('hidden'); // solo drawer, no ambos
            btn.setAttribute('aria-expanded', !drawer.classList.contains('hidden'));
          });
      }
    </script>
